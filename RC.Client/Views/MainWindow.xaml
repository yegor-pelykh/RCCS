<Window x:Class="RC.Client.Views.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:RC.Client.ViewModels;assembly=RC.Client"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Width="400" Height="400" WindowStartupLocation="CenterScreen"
        Title="RC Client">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Device Info -->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Device info" FontWeight="Bold" />
            <StackPanel Grid.Row="1" DataContext="{Binding MachineInfo}">
                <!--<TextBlock Text="{Binding Path=..., StringFormat=...: {0}}" />-->
            </StackPanel>
        </Grid>
        
    </Grid>
</Window>
